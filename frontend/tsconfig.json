{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"]
  },
  "include": [
    "vite-env.d.ts",
    "components/**/*",
    "css/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
